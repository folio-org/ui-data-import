{
  "extends": "@folio/eslint-config-stripes",
  "parser": "@babel/eslint-parser",
  "overrides": [
    {
      "files": [ "src/**/tests/*", "test/**/*" ]
    }
  ],
  "rules": {
    "import/prefer-default-export": "off",
    "import/no-cycle": "off",
    "react/prop-types": [
      "error",
      {
        "skipUndeclared": true
      }
    ]
  },
  "env": {
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["__mock__", "./test/jest/__mock__"],
          ["fixtures", "./test/jest/fixtures"],
          ["helpers", "./test/jest/helpers"]
        ]
      }
    }
  }
}
